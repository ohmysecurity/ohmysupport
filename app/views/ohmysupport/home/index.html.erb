<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Help Center</h1>
      <p class="lead text-muted">Feel free to read our atricles. They contain a lot of useful stuff. We work hard to provide you the best possible experience. Our knowledge base is full wisdom. Really, we do not joke!</p>
      <p>
        <%= link_to 'Create ticket', new_ticket_path, class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <%= yield %>
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <%- @categories.each do |category| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-title">
              <a href="#">
                <h2>
                  <%= category.name %>
                </h2>
              </a>
            </p>
            <div class="d-flex justify-content-between align-items-center"></div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

