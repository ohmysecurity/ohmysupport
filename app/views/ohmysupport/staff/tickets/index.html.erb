<br />

<div class='container'>
  <ul class="list-group">
    <%- @tickets.each do |ticket| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>
        <%= link_to ticket.title, ticket_path(ticket) %>
        at
        <%= ticket.created_at %>
        </span>
        <span class="badge <%= ticket_badge_color(ticket) %> rounded-pill"><%= ticket.state.humanize %></span>
      </li>
    <% end %>
  </ul>
</div>
